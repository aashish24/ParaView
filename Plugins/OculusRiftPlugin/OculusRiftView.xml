<ServerManagerConfiguration>
  <ProxyGroup name="views">
    <RenderViewProxy name="RenderViewOculusRift" class="vtkPVRenderViewOculusRift"
        processes="client|renderserver|dataserver"
        base_proxygroup="views" base_proxyname="RenderView">
		<DoubleVectorProperty command="SetEyeSeparation"
                         default_values="0.06"
                         name="EyeSeparation"
                         number_of_elements="1">
		</DoubleVectorProperty>
		<DoubleVectorProperty command="SetProjectionOffset"
                         default_values="0.0 0.0"
                         name="ProjectionOffset"
                         number_of_elements="2">
		</DoubleVectorProperty>
		<DoubleVectorProperty command="SetDistortionK"
                         default_values="0 0 0 0"
                         name="DistortionK"
                         number_of_elements="4">
		</DoubleVectorProperty>
		<DoubleVectorProperty command="SetDistortionScale"
                         default_values="1.0"
                         name="DistortionScale"
                         number_of_elements="1">
		</DoubleVectorProperty>
		<DoubleVectorProperty command="SetChromaAberation"
                         default_values="0 0 0 0"
                         name="ChromaAberation"
                         number_of_elements="4">
		</DoubleVectorProperty>
		<IntVectorProperty command="SetStereoPostClient"
                         default_values="1"
                         name="StereoAndPostOnClient"
                         number_of_elements="1">
		</IntVectorProperty>
    </RenderViewProxy>
  </ProxyGroup>
</ServerManagerConfiguration>
